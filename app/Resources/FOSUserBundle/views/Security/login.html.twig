{% extends "FOSUserBundle::layout.html.twig" %}
    {% block style %}
      {{ parent() }}
      <link href="{{ asset('css/signin.css') }}" rel="stylesheet">    
    {% endblock %}
{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<img id="bg" src="{{ asset('images/unheard_sounds.jpg') }}"/>        
{% if error %}
    <div class="alert alert-danger">{{ error|trans }}</div>
{% endif %}
<form action="{{ path('fos_user_security_check') }}" method="post" class="form-signin">
	<h2 class="form-signin-heading text-center">ورود</h2>
  	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<input type="text" id="username" name="_username" placeholder="نام کاربری" value="{{ last_username }}" required="required" class="form-control" autofocus>
	<input type="password" class="form-control" id="password" name="_password" placeholder="کلمه عبور" value="{{ last_username }}" required="required">
	<label class="checkbox">
		  <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
	</label>
	<button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
</form>
{% endblock fos_user_content %}

{% block footer %}
  <a href="{{ path('chakosh_blog_homepage') }}">بازگشت به خانه <span class="glyphicon glyphicon-arrow-left"></span></a>  
{% endblock %}
